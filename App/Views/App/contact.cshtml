@{ ViewBag.Title = "Contact Page";}
<h1> Feel Free to Contact us</h1>

@model App.ViewModel.ContactModel

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" ></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" ></script>
    @*<script>alert("working");</script>*@
}

    <p asp-validation-summary="ValidationSummary.ModelOnly"></p>

<form method="post">
    @if (ViewBag.msg != null)
    {
        @ViewBag.msg;
    }
    <br />
    <div class="col-md-6 col-md-offset-3">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span><br />
        </div>

        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email"></span><br />
        </div>

        <div class="form-group">
            <label asp-for="Message">Message</label>
            <textarea rows="2" class="form-control" cols="40" asp-for="Message"></textarea>
            <span asp-validation-for="Message"></span><br />
        </div>
        <input type="submit" value="Send Message" class="btn btn-default col-md-offset-10" />
    </div>
</form>